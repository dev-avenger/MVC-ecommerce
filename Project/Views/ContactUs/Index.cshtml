@using Project.Models
@model ContactUSViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-white shadow-sm">
                        <li class="breadcrumb-item"><a href="index.html" class="no-underline">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-3">
                @Html.Partial("_SideBar",Model.sidebar)
            </div>
            <div class="col-9">
                <div class="row">
                    <div class="col mt-3">
                        <div class="card shadow-sm mb-5">
                            <div class="card-header py-5">
                                <h1 class="card-title text-center display-4 font-weight-bold">Contact Us</h1>
                                <p class="card-text text-center text-muted">If you have any questions,  please feel free to contact us, our customer service center is working for you 24/7</p>
                            </div>
                            <div class="card-body p-5">
                                <div class="row">
                                    <div class="col">
                                        @using (Html.BeginForm("AddContactUs", "ContactUs", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="form-group py-1">
                                                @Html.LabelFor(a => a.contactus.Name, "Name", new { @class = "control-label" })
                                                @Html.TextBoxFor(a => a.contactus.Name, "Name", new { @class = "form-control", placeholder = "Enter Name" })
                                                @Html.ValidationMessageFor(a => a.contactus.Name)
                                            </div>
                                            <div class="form-group py-1">
                                                @Html.LabelFor(a => a.contactus.Email, "Email", new { @class = "control-label" })
                                                @Html.TextBoxFor(a => a.contactus.Email, "Email", new { @class = "form-control", placeholder = "Enter Email" })
                                                @Html.ValidationMessageFor(a => a.contactus.Email)
                                            </div>
                                            <div class="form-group py-1">
                                                @Html.LabelFor(a => a.contactus.Subject, "Subject", new { @class = "control-label" })
                                                @Html.TextBoxFor(a => a.contactus.Subject, "Subject", new { @class = "form-control", placeholder = "Enter Name" })
                                                @Html.ValidationMessageFor(a => a.contactus.Subject)
                                            </div>
                                            <div class="form-group py-1">
                                                @Html.LabelFor(a => a.contactus.Message, "Message", new { @class = "control-label" })
                                                @Html.TextAreaFor(a => a.contactus.Message, 8, 10, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(a => a.contactus.Message)
                                            </div>
                                                @Html.HiddenFor(a => a.contactus.Time, new { Value = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss") })
                                            <div class="row pt-3">
                                                <div class="col text-center">
                                                    <button type="submit" class="btn btn-success"><i class="fas fa-user"></i> Send Message</button>
                                                </div>
                                            </div>
                                        }
