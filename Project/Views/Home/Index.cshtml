@using Project.Models
@model HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="container" id="main-carousel">
    <div class="row">
        <div class="col">
            <div id="carousel-slide" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-slide" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-slide" data-slide-to="1"></li>
                    <li data-target="#carousel-slide" data-slide-to="2"></li>
                    <li data-target="#carousel-slide" data-slide-to="3"></li>
                    <li data-target="#carousel-slide" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">

                    @foreach (var slide in Model.sliders)
                    {
                        if (Model.sliders.First() == slide)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/@slide.SlideImage" alt="@slide.SlideName">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/@slide.SlideImage" alt="@slide.SlideName">
                            </div>
                        }

                    }
                </div>
                <a class="carousel-control-prev" href="#carousel-slide" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-slide" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="container" id="banner">
    <div class="row">
        <div class="col">
            <div class="banner">
                <i class="fa fa-heart"></i>
                <h1 class="banner-title">we love our customers</h1>
                <p class="banner-text">We are known to provide best possible service</p>
            </div>
        </div>
        <div class="col">
            <div class="banner">
                <i class="fas fa-hand-holding-usd"></i>
                <h1 class="banner-title">best prices</h1>
                <p class="banner-text">You can check on all others sites about the prices and than compare with us.</p>
            </div>
        </div>
        <div class="col">
            <div class="banner">
                <i class="fas fa-thumbs-up"></i>
                <h1 class="banner-title">100% satisfaction guaranteed</h1>
                <p class="banner-text">Free returns on everything for 3 months.</p>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid" id="offer">
    <div class="row">
        <div class="col">
            <div class="offer-text">latest this week</div>
        </div>
    </div>
</div>
<div class="container" id="products">
    <div class="row">
        @foreach(var product in Model.products)
        {
            if (Model.products.IndexOf(product) != 8)
            {

                <div class="col-lg-3">
                    <div class="product-card">
                        <img src="~/@product.ProductImg1" alt="@product.ProductTitle" class="img-fluid img-responsive" height="348">
                        <div class="product-card-body">
                            <div class="product-card-title">@product.ProductTitle</div>
                            <div class="product-card-content">$ @product.ProductPrice</div>
                            <div class="product-card-footer">
                                <a href='@Url.Action("Details","Shop",new { id =@product.Id })' class="btn btn-outline-dark btn-sm">view detail</a>
                                <a href="@Url.Action("Details","Shop",new { id =@product.Id })" class="btn btn-success btn-sm"><i class="fa fa-shopping-cart"></i> add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
            else {
                break;
            }
        }
    </div>
</div>